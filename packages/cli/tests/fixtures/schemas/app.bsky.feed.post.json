{
	"lexicon": 1,
	"id": "app.bsky.feed.post",
	"defs": {
		"main": {
			"type": "record",
			"key": "tid",
			"record": {
				"type": "object",
				"required": ["text", "createdAt"],
				"properties": {
					"text": {
						"type": "string",
						"maxLength": 300,
						"maxGraphemes": 300
					},
					"createdAt": {
						"type": "string",
						"format": "datetime"
					},
					"reply": {
						"type": "ref",
						"ref": "app.bsky.feed.post#replyRef"
					}
				}
			}
		},
		"replyRef": {
			"type": "object",
			"required": ["root", "parent"],
			"properties": {
				"root": {
					"type": "ref",
					"ref": "com.atproto.repo.strongRef"
				},
				"parent": {
					"type": "ref",
					"ref": "com.atproto.repo.strongRef"
				}
			}
		}
	}
}
